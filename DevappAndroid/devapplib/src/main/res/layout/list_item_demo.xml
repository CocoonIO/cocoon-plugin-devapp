<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:baselineAligned="true" >

        <ImageView
            android:id="@+id/demo_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/demos_list_image_height"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/detail_default"
            android:layout_gravity="left" />

        <com.ludei.devapplib.android.widgets.TextViewFont
            android:id="@+id/demo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:text="Demo name"
            android:textSize="@dimen/text_size_small"
            app:customFont="@string/app_font_bold"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:background="#80444444"
            android:visibility="gone"
            android:textColor="@drawable/list_text_demo_selector" />
    
</RelativeLayout>